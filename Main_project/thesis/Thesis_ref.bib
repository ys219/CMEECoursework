journal = {Biological Conservation},
keywords = {Conservation priorities,Protected areas,Qinling Mountains,Species distribution patterns,Systematic conservation planning},
pages = {64--71},
publisher = {Elsevier Ltd},
title = {{Integrated maps of biodiversity in the Qinling Mountains of China for expanding protected areas}},

issn = {1365294X},
journal = {Molecular Ecology},
keywords = {DNA barcoding,biomonitoring,community ecology,freshwater ecosystems,invertebrates},
number = {1},
pages = {146--166},
pmid = {29113023},
title = {{Metabarcoding of freshwater invertebrates to detect the effects of a pesticide spill}},
volume = {27},
year = {2018}
}

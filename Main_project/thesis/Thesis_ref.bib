file = {:home/yige/Downloads/ece3.4839.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {arthropods,body size,compositionality,metabarcoding,sequencing bias,species diversity,taxon composition},
number = {6},
pages = {3105--3116},
title = {{Toward accurate species-level metabarcoding of arthropod communities from the tropical forest canopy}},
